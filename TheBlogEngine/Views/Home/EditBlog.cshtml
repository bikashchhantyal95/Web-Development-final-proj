@model TheBlogEngine.Shared.Blog

@{
    Layout = null;
}

<form asp-action="CreateBlog">
    <div class="mb-3">
        <label for="blogTitle" class="form-label" asp-for="Title">Title</label>
        <input type="text" class="form-control" id="blogTitleInput" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="content" class="form-label" asp-for="Content">Content</label>
        <textarea type="text" class="form-control" id="contentInput" asp-for="Content">
            Enter content here.....
        </textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Post</button>
</form>

